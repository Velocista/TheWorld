@model IEnumerable<TheWorld.Models.Trip>
@{
    ViewBag.Title = "Home Page";
}

<div class="row">
    <!--Container for making grid decisions inside of, so not really a row-->
    <div class="col-md-6 col-xs-8">
        <h3>The World</h3>
        <p>This will be fun.</p>
        <form>
            <div class="form-group">
                <label>Date</label>
                <input class="form-control" />
            </div>
            <div class="form-group">
                <label>Location</label>
                <input class="form-control" />
            </div>
            <div><input type="submit" value="Add" class="btn btn-success" /></div>
        </form>
    </div>
    <div class="col-md-6 col-xs-8">
        <h2>The Map</h2>
    </div>
    <ul>
        @foreach (var item in Model)
        {
            <li>@item.Name : @item.DateCreated.ToString("d")</li>
        }
    </ul>
</div>